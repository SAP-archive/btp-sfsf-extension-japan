<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core">
	<ResponsivePopover
		class="sapUiPopupWithPadding"
		placement="Auto" 
		title = "{i18n>employeeInfo}"
		titleAlignment="Center">
		<endButton>
			<Button
				id="close"
				text="close"
				type="Transparent"
				press="onClickClose" />	
		</endButton>
		<l:HorizontalLayout>
				<Image id="photo" src="{photo}" width="4rem" alt="photo" tooltip="{i18n>photo}"/>
				<Title id="currentEmpName" text="{currentEmpName}" />
		</l:HorizontalLayout>
				<ToolbarSpacer/>
				<Label text="{i18n>division}:" labelFor="currentDivisionName" vAlign="Middle"/>
				<Text id="currentDivisionName" text="{currentDivisionName}" />
				<ToolbarSpacer/>
				<Label text="{i18n>department}:" labelFor="currentDepartmentName" vAlign="Middle"/>
				<Text id="currentDepartmentName" text="{currentDepartmentName}" />
				<ToolbarSpacer/>
				<Label text="{i18n>position}:" labelFor="currentPositionName" vAlign="Middle"/>
				<Text id="currentPositionName" text="{currentPositionName}" />
				<ToolbarSpacer/>
				<Label text="{i18n>jobTenure}:" labelFor="jobTenure" vAlign="Middle"/>
				<Text id="jobTenure" text="{jobTenure}" />
				<ToolbarSpacer/>
				<Label text="{i18n>level}:" labelFor="currentJobGrade" vAlign="Middle"/>
				<Text id="currentJobGrade" text="{currentJobGrade}" />
				<ToolbarSpacer/>
				<Label text="{i18n>willingness}:" labelFor="willingness" vAlign="Middle"/>
				<Text id="willingness" text="{willingness}" />
				<ToolbarSpacer/>
				<Label text="{i18n>latestevaluation}:" labelFor="rating1" vAlign="Middle"/>
				<Text id="rating1" text="{rating1}" />
				<ToolbarSpacer/>
				<Label text="{i18n>previousevaluation}:" labelFor="rating2" vAlign="Middle"/>
				<Text id="rating2" text="{rating2}" />
				<ToolbarSpacer/>
				<Label text="{i18n>retirementplan}:" labelFor="currentEmpRetire" vAlign="Middle"/>
				<Text id="currentEmpRetire" text="{currentEmpRetire}" />
	</ResponsivePopover>
</core:FragmentDefinition>