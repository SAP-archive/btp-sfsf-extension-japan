<mvc:View 
	xmlns="sap.m"
	xmlns:cards="sap.f.cards"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:l="sap.ui.layout"
	xmlns:m="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:tnt="sap.tnt"
	controllerName="com.sap.sfsf.comparison.Reshuffle_Comparison_UI.controller.Comparison" 
	xmlns:html="http://www.w3.org/1999/xhtml">
	<App id="rootControl">
	<f:DynamicPage class="sapUiComparisonContainer" >
		<f:title>
			<f:DynamicPageTitle
				id="dynamic-page"
				stateChange="onStateChange"
				backgroundDesign="Transparent">
				<f:heading>
					<!--<Title text="Comparison" />-->
					<Button id="caseEditBtn" text="{i18n>b_return}" visible="true" press="onNavBack"/>
				</f:heading>
				<f:snappedContent>
					<Carousel
						height="auto"
						class="sapUiSmallMarginBottom"
						id="carousel-snapped"
						pageChanged="onPageChanged"
						pageIndicatorPlacement="Top"
						showPageIndicator="{= !${settings>/isDesktop} }"
						pages="{
							path: 'candidates>/Candidates'
						}">
						<customLayout>
							<CarouselLayout visiblePagesCount="{settings>/pagesCount}" />
						</customLayout>

						<f:Card class="sapUiTinyMarginTop">
							<f:header>
								<cards:Header
									title="{candidates>candidateName}"
									subtitle="{candidates>candidateID}"
									/>
							</f:header>
						</f:Card>
					</Carousel>
				</f:snappedContent>
			</f:DynamicPageTitle>
		</f:title>
		<f:header>
			<f:DynamicPageHeader backgroundDesign="Transparent">
				<Carousel
					height="auto"
					class="sapUiSmallMarginBottom"
					id="carousel-expanded"
					pageChanged="onPageChanged"
					pageIndicatorPlacement="Top"
					showPageIndicator="{= !${settings>/isDesktop} }"
					pages="{
						path: 'candidates>/Candidates'
					}">
					<customLayout>
						<CarouselLayout visiblePagesCount="{settings>/pagesCount}" />
					</customLayout>

					<f:Card class="sapUiTinyMarginTop">
						<f:header>
							<cards:Header
								title="{candidates>candidateName}"
								subtitle="{candidates>candidateID}"
								 />
						</f:header>
						<f:content>
							<l:VerticalLayout width="100%">
								<l:BlockLayout>
									<l:BlockLayoutRow>
										<l:BlockLayoutCell>
											<HBox>
												<m:Button
													press=".onJobHistory($event, ${candidates>candidateID})"
													type="Emphasized"
													text="{i18n>jobHistory}"
													class="sapUiTinyMarginBegin" />
											</HBox>
										</l:BlockLayoutCell>
										<l:BlockLayoutCell>
											<HBox>
												<Label text="{i18n>currentDivisionName}:"/>
											</HBox>
											<HBox class="sapUiSmallMarginBottom">
												<Text text="{candidates>currentDivisionName}" />
											</HBox>
											<HBox>
												<Label text="{i18n>currentDepartmentName}:"/>
											</HBox>
											<HBox class="sapUiSmallMarginBottom">
												<Text text="{candidates>currentDepartmentName}" />
											</HBox>
											<HBox>
												<Label text="{i18n>currentPositionName}:"/>
											</HBox>
											<HBox class="sapUiSmallMarginBottom">
												<Text text="{candidates>currentPositionName}" />
											</HBox>
										</l:BlockLayoutCell>
										<l:BlockLayoutCell>
											<HBox>
												<Label text="{i18n>nextDivisionName}:" />
											</HBox>
											<HBox class="sapUiSmallMarginBottom">
												<Text text="{candidates>nextDivisionName}" />
											</HBox>
											<HBox>
												<Label text="{i18n>nextDepartmentName}:" />
											</HBox>
											<HBox class="sapUiSmallMarginBottom">
												<Text text="{candidates>nextDepartmentName}" />
											</HBox>
											<HBox>
												<Label text="{i18n>nextPositionName}:" />
											</HBox>
											<HBox class="sapUiSmallMarginBottom">
												<Text text="{candidates>nextPositionName}"/>
											</HBox>
										</l:BlockLayoutCell>
									</l:BlockLayoutRow>
								</l:BlockLayout>
							</l:VerticalLayout>
						</f:content>
					</f:Card>
				</Carousel>
			</f:DynamicPageHeader>
		</f:header>
		<f:content>
			<List id="listItems"
				backgroundDesign="Transparent"
				class="sapUiSmallMarginBottom"
				items="{
				path: 'candidates>/Props'
			}" >
				<items>
					<CustomListItem class="sapUiComparisonContent">
						<Panel
							expandable="true"
							expanded="false"
							headerText="{candidates>key}"
							height="2.75rem"
							expand="onPanelExpanded">
						</Panel>
						<HBox class="sapUiTinyMarginTop"
								alignItems="Start"
								backgroundDesign="Solid"
								items="{
									path: 'candidates>values', templateShareable : true
								}">
							<items>
								<VBox class="sapUiTinyMarginTopBottom sapUiComparisonItem">
									<layoutData>
										<FlexItemData growFactor="1" baseSize="0" />
									</layoutData>
									<HBox>
										<FormattedText htmlText="{candidates>text}" />
									</HBox>
									<HBox class="sapUiSmallMarginTop" visible="false">
										<Text text="{candidates>description}" />
									</HBox>
								</VBox>
							</items>
						</HBox>
					</CustomListItem>
				</items>
			</List>
		</f:content>
	</f:DynamicPage>
	</App>
</mvc:View>